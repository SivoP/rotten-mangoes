<h1>Rotten Mangoes</h1>

    <%= link_to "Submit a movie!", new_movie_path %>
    <%= form_tag('/search', method: "get")  do %>
      <div>
        <%= label_tag(:query, "title:") %><br/>
        <%=  text_field_tag :query, params[:query], placeholder: "Find a movie!" %> <br>
      </div>
      <div>
      <%= label_tag(:duration, "duration") %>
        <%= select_tag(:duration, options_for_select([["n/a"],["short"], ["medium"], ["long"]])) %>
      </div>
      <div><%= submit_tag("Search") %></div>
    <% end %>

    <hr>
    <% @movies.each do |movie| %>
    <%= link_to image_tag(movie.poster_image_url), movie_path(movie) %>
      <%= render partial: 'movie', object: movie %>
    <% end %>
   

