<h1> Here are all users </h1>

<button> <%= link_to "preview", preview_mode_session_path(session[:admin_id]), method: :post %> </button>


<%= paginate @users %>
<% @users.each do |user| %>

  <table>
    <tr>
      <th> First Name </th>
      <th> Last Name </th>
      <th> Email </th>
      <th> Admin? </th>
      <th> Delete User </th>
      <th> Preview </th>
      <th> 
    </tr>
    <tr>
      <td> <%= link_to user.firstname, admin_user_path(user) %> </td>
      <td> <%= user.lastname %> </td>
      <td> <%= user.email %> </td>
      <td> <%= user.admin %> </td>
      <td> <%= link_to "delete", admin_user_path(user), method: :delete %> </td>
      <td> <%= link_to "preview", preview_mode_session_path(user), method: :post %>
    </tr>
  </table>

  <% end %>


 